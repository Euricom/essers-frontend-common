{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "develop"
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "api.schema.ts",
      "package.json",
      "pnpm-lock.yaml",
      ".github",
      ".husky",
      "build/**",
      "public"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "crlf",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noRedundantRoles": "off"
      },
      "correctness": {
        "noUnusedImports": "off",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn"
      },
      "nursery": {
        "noEnum": "error",
        "noNestedTernary": "warn",
        "noSecrets": "error",
        "useSortedClasses": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none",
      "indentWidth": 2
    }
  }
}
